<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtEntreprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entreprise"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPoste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEntreprise"
        android:text="IntitulÃ© du poste"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Vue (icone + nombre) -->
    <LinearLayout
        android:id="@+id/viewContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_view"
            app:tint="#4CAF50" />

        <TextView
            android:id="@+id/txtVue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="53"
            android:textColor="#4CAF50"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Prix -->
    <TextView
        android:id="@+id/txtPrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPoste"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_price"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="Offre: 2000"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>
